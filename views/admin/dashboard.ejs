<!-- views/admin/dashboard.ejs with DaisyUI -->
<!DOCTYPE html>
<html lang="en" data-theme="pokemon">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Pokémon Book</title>
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@3.1.7/dist/full.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!-- Admin Navbar -->
    <%- include('../partials/admin-navbar') %>

    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>

      <!-- Stats Overview -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <!-- Users Stat Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex items-center">
              <div class="avatar placeholder mr-4">
                <div
                  class="bg-primary text-primary-content rounded-full w-12 h-12"
                >
                  <span class="text-xl">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                      ></path>
                    </svg>
                  </span>
                </div>
              </div>
              <div>
                <p class="text-gray-500 text-sm">Total Users</p>
                <h2 class="stat-value text-3xl">
                  <%= stats ? stats.users : 0 %>
                </h2>
                <p class="text-gray-500 text-sm">
                  Incl. <%= stats ? stats.admins : 0 %> admins
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Favorites Stat Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex items-center">
              <div class="avatar placeholder mr-4">
                <div
                  class="bg-accent text-accent-content rounded-full w-12 h-12"
                >
                  <span class="text-xl">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                      ></path>
                    </svg>
                  </span>
                </div>
              </div>
              <div>
                <p class="text-gray-500 text-sm">Total Favorites</p>
                <h2 class="stat-value text-3xl">
                  <%= stats ? stats.favorites : 0 %>
                </h2>
                <p class="text-gray-500 text-sm">Saved Pokémon</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Activities Stat Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex items-center">
              <div class="avatar placeholder mr-4">
                <div
                  class="bg-secondary text-secondary-content rounded-full w-12 h-12"
                >
                  <span class="text-xl">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                      ></path>
                    </svg>
                  </span>
                </div>
              </div>
              <div>
                <p class="text-gray-500 text-sm">Total Activities</p>
                <h2 class="stat-value text-3xl">
                  <%= stats ? stats.activities : 0 %>
                </h2>
                <p class="text-gray-500 text-sm">Logged events</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Links Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title">Quick Links</h3>
            <ul class="menu bg-base-100 rounded-box">
              <li>
                <a href="/admin/users" class="flex">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                    ></path>
                  </svg>
                  Manage Users
                </a>
              </li>
              <li>
                <a href="/" class="flex">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                    ></path>
                  </svg>
                  Return to Home
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Users -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body p-0">
            <div class="flex justify-between items-center p-4 border-b">
              <h2 class="card-title">Recent Users</h2>
              <a href="/admin/users" class="btn btn-link">View all</a>
            </div>
            <div class="overflow-x-auto">
              <table class="table">
                <thead>
                  <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (!recentUsers || recentUsers.length === 0) { %>
                  <tr>
                    <td colspan="4" class="text-center">No users found</td>
                  </tr>
                  <% } else { %> <% for (let i = 0; i < recentUsers.length; i++)
                  { %> <% const user = recentUsers[i]; %>
                  <tr>
                    <td>
                      <div class="font-medium"><%= user.username %></div>
                    </td>
                    <td>
                      <% if (user.isAdmin) { %>
                      <div class="badge badge-primary">Admin</div>
                      <% } else { %>
                      <div class="badge badge-ghost">User</div>
                      <% } %>
                    </td>
                    <td>
                      <%= new Date(user.createdAt).toLocaleDateString() %>
                    </td>
                    <td>
                      <div class="flex gap-2">
                        <a
                          href="/admin/users/<%= user._id %>"
                          class="btn btn-xs btn-info"
                          >View</a
                        >
                        <a
                          href="/admin/users/<%= user._id %>/edit"
                          class="btn btn-xs btn-warning"
                          >Edit</a
                        >
                      </div>
                    </td>
                  </tr>
                  <% } %> <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title border-b pb-2">Recent Activity</h2>
            <% if (!recentActivity || recentActivity.length === 0) { %>
            <div class="alert">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="stroke-info shrink-0 w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span>No recent activity found</span>
            </div>
            <% } else { %>
            <ul class="timeline timeline-vertical">
              <% for (let i = 0; i < recentActivity.length; i++) { %> <% const
              item = recentActivity[i]; %> <% let dotClass = 'bg-gray-400'; let
              actionText = 'Activity'; let actionIcon = '🔄'; if (item.action
              === 'login') { dotClass = 'bg-success'; actionText = 'Logged in';
              actionIcon = '🔐'; } else if (item.action === 'register') {
              dotClass = 'bg-primary'; actionText = 'Registered account';
              actionIcon = '✨'; } else if (item.action === 'logout') { dotClass
              = 'bg-warning'; actionText = 'Logged out'; actionIcon = '👋'; }
              else if (item.action === 'favorite_added') { dotClass =
              'bg-accent'; actionText = 'Added to favorites'; actionIcon = '❤️';
              } else if (item.action === 'favorite_removed') { dotClass =
              'bg-info'; actionText = 'Removed from favorites'; actionIcon =
              '💔'; } %>

              <li>
                <div class="timeline-start text-xs">
                  <%= new Date(item.timestamp).toLocaleString() %>
                </div>
                <div class="timeline-middle">
                  <div class="badge badge-sm <%= dotClass %>"></div>
                </div>
                <div class="timeline-end timeline-box">
                  <p><%= actionIcon %> <%= actionText %></p>
                  <p class="text-xs mt-1">
                    User:
                    <a
                      href="/admin/users/<%= item.userId %>"
                      class="link link-hover link-primary"
                    >
                      <%= item.userId.toString().substring(0, 8) %>...
                    </a>
                  </p>

                  <% if (item.action === 'favorite_added' || item.action ===
                  'favorite_removed') { %> <% if (item.details &&
                  item.details.pokemonName) { %>
                  <p class="text-xs mt-1">
                    Pokémon:
                    <span class="font-medium capitalize"
                      ><%= item.details.pokemonName %></span
                    >
                  </p>
                  <% } %> <% } %>
                </div>
                <hr />
              </li>
              <% } %>
            </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
