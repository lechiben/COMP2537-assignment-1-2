<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokémon Pagination</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex flex-col items-center p-4">
    <% if (typeof username !== 'undefined' && username) { %>
    <h1 class="text-3xl font-bold mb-4">
      Welcome to <%= username %>'s Pokémon Book
    </h1>
    <div class="flex gap-4 mb-4">
      <a href="/logout" class="text-blue-500 hover:underline">Logout</a>
    </div>
    <% } else { %>
    <h1 class="text-3xl font-bold mb-4">Pokémon Book</h1>
    <a href="/auth" class="mb-4 text-blue-500 hover:underline"
      >Login/Register</a
    >
    <% } %>
    <input
      id="search-input"
      type="text"
      placeholder="Search Pokémon..."
      class="mb-4 p-2 border rounded-lg w-64"
    />
    <div
      id="result"
      class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-6 gap-4 mb-4"
    ></div>
    <div id="pagination-box" class="flex gap-2 flex-wrap justify-center"></div>

    <!-- User-specific sections only visible when logged in -->
    <% if (typeof username !== 'undefined' && username) { %>
    <!-- Include favorites partial -->
    <%- include('partials/favorites') %>

    <!-- Include timeline partial -->
    <%- include('partials/timeline-partial') %> <% } %>

    <script
      src="/js/pagination.js"
      onerror="document.getElementById('result').innerHTML = '<p class=\'text-red-500\'>Error loading Pokémon data. Please try again later.</p>';"
    ></script>
  </body>
</html>
