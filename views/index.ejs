<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokémon Pagination</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex flex-col items-center p-4">
    <% if (typeof username !== 'undefined' && username) { %>
    <h1 class="text-3xl font-bold mb-4">
      Welcome to <%= username %>'s Pokémon Book
    </h1>
    <div class="flex gap-4 mb-4">
      <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
      <a
        href="/admin"
        class="text-purple-500 hover:underline flex items-center"
      >
        <svg
          class="w-4 h-4 mr-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
          ></path>
        </svg>
        Admin Dashboard
      </a>
      <% } %>
      <a
        href="/timeline/view"
        class="text-blue-500 hover:underline flex items-center"
      >
        <svg
          class="w-4 h-4 mr-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        Activity Timeline
      </a>
      <a href="/logout" class="text-blue-500 hover:underline">Logout</a>
    </div>
    <% } else { %>
    <h1 class="text-3xl font-bold mb-4">Pokémon Book</h1>
    <a href="/auth" class="mb-4 text-blue-500 hover:underline"
      >Login/Register</a
    >
    <% } %>
    <input
      id="search-input"
      type="text"
      placeholder="Search Pokémon..."
      class="mb-4 p-2 border rounded-lg w-64"
    />
    <div
      id="result"
      class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-6 gap-4 mb-4"
    ></div>
    <div id="type-filter-box" class="flex gap-2 flex-wrap justify-center mb-4"></div>
    <div id="pagination-box" class="flex gap-2 flex-wrap justify-center"></div>

    <!-- User-specific sections only visible when logged in -->
    <% if (typeof username !== 'undefined' && username) { %>
    <!-- Include favorites partial -->
    <%- include('partials/favorites') %>

    <!-- Include timeline partial -->
    <%- include('partials/timeline-partial') %> <% } %>

    <script
      src="/js/pagination.js"
      onerror="document.getElementById('result').innerHTML = '<p class=\'text-red-500\'>Error loading Pokémon data. Please try again later.</p>';"
    ></script>
  </body>
</html>
